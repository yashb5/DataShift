<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003" author="datashift">
        <createTable tableName="pipeline_runs">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="pipeline_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="timestamp"/>
            <column name="end_time" type="timestamp"/>
            <column name="rows_moved" type="bigint"/>
            <column name="status" type="varchar(50)"/>
            <column name="error_message" type="text"/>
            <column name="created_at" type="timestamp"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="pipeline_runs"
                                 baseColumnNames="pipeline_id"
                                 constraintName="fk_pipeline_run_pipeline"
                                 referencedTableName="pipelines"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
