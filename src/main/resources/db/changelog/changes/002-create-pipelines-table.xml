<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="002" author="datashift">
        <createTable tableName="pipelines">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="source_connection_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="source_table" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="target_connection_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="target_table" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="mapping_config" type="text"/>
            <column name="is_active" type="boolean" defaultValueBoolean="true"/>
            <column name="created_at" type="timestamp"/>
            <column name="updated_at" type="timestamp"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="pipelines"
                                 baseColumnNames="source_connection_id"
                                 constraintName="fk_pipeline_source_connection"
                                 referencedTableName="connections"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="pipelines"
                                 baseColumnNames="target_connection_id"
                                 constraintName="fk_pipeline_target_connection"
                                 referencedTableName="connections"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
