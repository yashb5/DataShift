<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="006" author="datashift">
        <createTable tableName="alert_rules">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(500)"/>
            <column name="condition_type" type="varchar(100)"/>
            <column name="pipeline_id" type="bigint"/>
            <column name="threshold" type="int"/>
            <column name="time_window_hours" type="int"/>
            <column name="severity" type="varchar(50)"/>
            <column name="created_at" type="timestamp"/>
        </createTable>

        <createTable tableName="alerts">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="rule_id" type="bigint"/>
            <column name="message" type="text"/>
            <column name="severity" type="varchar(50)"/>
            <column name="triggered_at" type="timestamp"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="alerts" baseColumnNames="rule_id"
            referencedTableName="alert_rules" referencedColumnNames="id"
            constraintName="fk_alert_rule"/>
    </changeSet>
</databaseChangeLog>
